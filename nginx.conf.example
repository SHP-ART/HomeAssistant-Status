# Nginx Konfiguration für Home Assistant Status Dashboard
# Beispiel für einen Reverse Proxy Setup

server {
    listen 80;
    server_name deine-domain.de www.deine-domain.de;

    # Redirect HTTP to HTTPS (empfohlen)
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name deine-domain.de www.deine-domain.de;

    # SSL Zertifikate (mit Let's Encrypt certbot empfohlen)
    ssl_certificate /etc/letsencrypt/live/deine-domain.de/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/deine-domain.de/privkey.pem;

    # SSL Konfiguration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # Root Directory - hier liegt der Production Build
    root /var/www/homeassistant-status/dist;
    index index.html;

    # Logs
    access_log /var/log/nginx/ha-status-access.log;
    error_log /var/log/nginx/ha-status-error.log;

    # Gzip Kompression
    gzip on;
    gzip_vary on;
    gzip_min_length 1000;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/json;

    # Single Page Application - alle Anfragen zu index.html
    location / {
        try_files $uri $uri/ /index.html;

        # Cache Control für statische Assets
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
            expires 1y;
            add_header Cache-Control "public, immutable";
        }
    }

    # Security Headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
}

# Optional: Reverse Proxy für Home Assistant (falls du HA auch über das Internet erreichbar machen willst)
# WARNUNG: Sichere dies mit Authentifizierung ab!
server {
    listen 443 ssl http2;
    server_name ha.deine-domain.de;

    ssl_certificate /etc/letsencrypt/live/ha.deine-domain.de/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/ha.deine-domain.de/privkey.pem;

    location / {
        proxy_pass http://192.168.12.181:8123;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket Support für Home Assistant
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }
}
